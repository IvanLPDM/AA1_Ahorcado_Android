                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <Button
                android:id="@+id/nivel_7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
