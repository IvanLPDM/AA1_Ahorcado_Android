                <TextView
                    android:id="@+id/palabra_text_3"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="50dp"
                    android:text="@string/palabra_mariposas"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/letra_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:layout_marginEnd="70dp"
                    android:layout_marginTop="50dp"
                    android:text="@string/letras_9"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imageButton_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:backgroundTint="#B71010"
                    android:contextClickable="true"
                    android:foregroundGravity="right"
                    android:textAlignment="viewEnd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@mipmap/medium_level" />

                <TextView
                    android:id="@+id/palabra_text_4"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="50dp"
                    android:text="@string/palabra_navidad"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/letra_text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:layout_marginEnd="70dp"
                    android:layout_marginTop="50dp"
                    android:text="@string/letras_7"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
